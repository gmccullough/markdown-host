{
  "name": "markdown-host",
  "version": "0.1.0",
  "description": "Self-contained CLI webserver for markdown documentation with mermaid support",
  "type": "module",
  "bin": {
    "markdown-host": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build:css": "bunx tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css --minify",
    "build": "bun run build:css && bun build --compile --target=bun src/cli.ts --outfile=markdown-host",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.6.0",
    "marked": "^15.0.0",
    "shiki": "^1.24.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/bun": "latest",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0"
  }
}
